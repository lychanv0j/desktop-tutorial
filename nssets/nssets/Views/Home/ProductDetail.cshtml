﻿@model List<nssets.Models.ProductDetailPage>
@{
    int productId = ViewBag.ProductID;
    var productDT = Model;
}
<section class="main-content">
    <div class="row" style="margin: 20px">
            <div class="container" style="display: flex;">
            <div class="container">
                <div class="span4">
                    <a href="" class="thumbnail" data-fancybox-group="group1" title="Description 1">
                        <img alt="" src="~/Content/test/products/@(productId.ToString() + ".png")">
                    </a>
                </div>
                <div class="span5">
                    @if (productDT != null)
                    {
                        foreach (var detail in productDT)
                        {
                            if (detail != null && detail.ProductID == productId)
                            {
                            <address>
                                <strong>Product Name:</strong> <span>@detail.Product</span><br>
                                <strong>Brand:</strong> <span>@detail.Brand</span><br>
                                <strong>Product Code:</strong> <span>@detail.ProductID</span><br>
                                <strong>Availability:</strong> <span>@detail.Availability</span><br>
                                <strong>Price:</strong> <span>$</span><br>
                            </address>
                            }
                        }
                    }
                    else
                    {
                        <p>No product details available.</p>
                    }
                </div>
                <div class="span5">
                    <div class="span5">
                        @if (Session["Username"] != null)
                        {
                            <form id="addToCartForm" action="@Url.Action("AddToCart","Home")" method="post">
                                <input type="hidden" name="productId" value="@productId" />
                                <input type="hidden" name="quantity" value="1" />
                                <!-- Add an id to your anchor tag -->
                                <a href="" id="addToCartButton"class="btn btn-primary">Add to Cart</a>
                            </form>
                        }
                        else
                        {
                            <a href="@Url.Action("Login", "Home")" class="btn btn-inverse">Add to Cart</a>
                        }
                    </div>
                </div>
            </div>
            <div class="container" style="margin-top: 15px;">
                <div class="container">
                    <ul class="nav-tabs nav-edit" id="myTab">
                        <li class=""><a href="">Description</a></li>
                    </ul>
                    @if (productDT != null)
                    {
                        var productDetail = productDT.FirstOrDefault(p => p.ProductID == productId);
                        if (productDetail != null)
                        {
                            <div class="tab-content">
                                <div class="tab-pane active" id="home">
                                    <p>@productDetail.Description</p>
                                </div>
                                
                            </div>
                        }
                        else
                        {
                            <p>No product details available.</p>
                        }
                    }
                    else
                    {
                        <p>No product details available.</p>
                    }
                </div>
                <br />
                <div class="container">
                    <ul class="nav-tabs nav-edit" id="myTab">
                        <li class=""><a href="">Additional Information</a></li>
                    </ul>
                    @if (productDT != null)
                    {
                        var productDetail = productDT.FirstOrDefault(p => p.ProductID == productId);
                        if (productDetail != null)
                        {
                            
                                    <table class="">
                                        <tbody>
                                            <tr class="">
                                                <th>Size</th>
                                                <td>@productDetail.Size</td>
                                            </tr>
                                            <tr class="alt">
                                                <th>Colour : </th>
                                                <td>@productDetail.Colour</td> <!-- Hiển thị Colour -->
                                            </tr>
                                        </tbody>
                                    </table>
                              
                        }
                        else
                        {
                            <p>No product details available.</p>
                        }
                    }
                    else
                    {
                        <p>No product details available.</p>
                    }
                    
                </div>
            </div>
        </div>
    </div>
</section>